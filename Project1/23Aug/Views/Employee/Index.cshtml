@model IEnumerable<_23Aug.Models.Employee>

    <a asp-action="AddEmployee">Register</a>
    <table>
        <tr>
            <th>empId</th>
            <th>empName</th>
        </tr>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
               <td> <a asp-action="Details" asp-route-id="@m.Id">Know More</a></td>
               <td><a asp-action="Edit" asp-route-id="@m.Id">Edit</a></td> 
                <td><a asp-action="Delete" asp-route-id="@m.Id">Delete</a></td>
</tr>
        }
    </table>